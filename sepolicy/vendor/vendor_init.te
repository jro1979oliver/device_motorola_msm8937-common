typeattribute vendor_init data_between_core_and_vendor_violators;

allow vendor_init {
  camera_data_file
  fingerprint_data_file
  rootfs
  system_data_file
}:dir { create search getattr open read setattr ioctl write add_name remove_name rmdir relabelfrom };

allow vendor_init rootfs:lnk_file setattr;
allow vendor_init persist_file:filesystem getattr;
allow vendor_init rootfs:dir {create_dir_perms};
allow vendor_init bluetooth_data_file:file {setattr};
allow vendor_init wifi_data_file:dir {search};
allow vendor_init wifi_data_file:file {create_file_perms};
